/* 顶部大图 */
.jumbotron{
	background:url("../images/porduct/banner_main.jpg") no-repeat center/cover;
	height: 450px;
}
.jumbotron h1{
	color:#fda833;
	font-size: 30px;
	margin-top: 70px;
	padding: 8px;
}
.jumbotron p{
	color:#fda833;
	padding-left: 20px;
	padding-right: 20px;
}
.bot-banner img{width: 80%;margin: 0 auto;max-width: 1000px;}
.bot-banner {width:100%;background:url('../images/porduct/imgBg.jpg') no-repeat center/cover;padding-top: 40px;padding-bottom: 40px;}

/* 服务特性介绍 */
.intro .row >div >div{margin-bottom: 24px;}
.intro h3{
	color: #2a2a2a;
}
.intro p{
	color: #2a2a2a;
	letter-spacing: 1px
}
.intro .see_server{color:#0048ff;margin-bottom: 28px;}
/* 服务特性介绍 */

/* 服务器型号banner图 */
.server-model h3{margin-bottom: 28px;}
.model-banner img{margin:0 auto;}
.model-banner{padding-bottom: 35px;background: #fff;}


/* mobile服务器型号列表左侧 */
.model-list .left-top{float: left;width: 32%;background: #f3f3f3;height: 140px;}
.left-top h4{color: #2a2a2a;height: 140px;margin:0;line-height: 140px;}
.left-top p{margin: 0;}
/* mobile服务器型号列表左侧 */
.model-list .right-bottom{float: right;width: 68%;padding-right: 10px;padding-left: 12px;height: 140px;}
.model-data{display: inline-block;padding-left: 4px;padding-right: 6px;color: #666;border-right: 1px solid #ccc;height: 15px;line-height: 15px;margin-bottom: 5px;min-width: 70px;}
.model-data:nth-of-type(1){}
.model-data:nth-last-of-type(1){border-right: none;}
.server-model .describe li{padding: 0;border: 1px solid #ccc;margin-bottom: 10px;}
.data-unit{margin-right: 4px;margin-left: 1px;}

.right-bottom p{color: #2a2a2a;padding-top: 7px;margin-bottom: 7px;padding-left: 4px;}
.suited-company{padding-top: 8px;margin-top: 6px;border-top: 1px solid #ddd;height:50px;line-height:1.5;}
.bot-banner{margin-top: 34px;}


@media screen  and (max-width:650px){
	.jumbotron h1{
		font-size: 25px;
	}
}

@media (min-width: 768px) and (max-width:990px) {
	.suited-company{line-height: 50px;}
}



/* 手机 */
@media screen and (max-width: 768px){
	.intro .imgWrap{
		width: 120px;
		margin: 0 auto;
	}
	#special{
		font-size: 24px;
	}
}
/* pc */
@media screen and (min-width: 970px){
	/* PC巨幕样式 */
	body{
		background: #f8f8f8;
	}
	.jumbotron{
		height: 515px;
		background:#201331;
		position: relative;
	}
	.jumbotron img{
		position: absolute;
		right: 0;
		top: 85px;
	}
	.jumbotron h1{
		text-align: left;
		font-size: 44px;
		margin-top: 168px;
		padding: 12px;
		padding-left: 0;
	}
	.jumbotron p{
		text-align: left;
		padding-left:0;
		font-size: 26px;
	}


	.intro .imgWrap{
		width: 120px;
		height: 120px;
		margin: 0 auto;
		padding-top: 16px;
	}
	.intro h2{margin-top: 44px;margin-bottom: 35px;font-size: 26px;}
	.intro h3{color:#4a4a4a;margin-top: 44px;font-size: 22px;}	
	#special{font-size: 28px;}
	#last-img img{max-width: 90px;margin:0 auto;}
	#call-now {text-align: center;padding-top: 70px;padding-bottom: 25px;}
	#call-now a{background: #cd2332;color: #fff;width: 172px;height: 50px;line-height: 50px;padding:0;font-size: 18px;}
	.intro .row >div >div{
		border: 1px solid #ddd;
		margin-top: 15px;
		padding-bottom: 15px;
		position: relative;
		background: #fff;
	}
	.intro .row >div >div:hover .pc-hover{
		opacity: 0.88;
	}

	#ncard_exchange .imgWrap{
		width: 92px;
	}
	/* 服务器特性 */
	.pc-hover{
		position: absolute;
		width: 100%;
		height: 100%;
		background: rgba(205,35,50,0.95);
		opacity: 0;
		transition: all 0.4s ;
		-moz-transition:all 0.4s;
		-ms-transition:all 0.4s;
		-o-transition:all 0.4s;
		-webkit-transition:all 0.4s;
	}
	.pc-hover h4{
		text-align: center;
		color: #fff;
		padding-top: 20px;
		padding-bottom: 12px;
		font-size: 24px;
	}
	.pc-hover h5{
		text-align:left;
		padding: 0 12px;
		color: #fff;
		font-weight: normal;
		line-height: 1.5;
	}/* 服务器特性 */


	.server-model h3{margin:0;padding-top: 25px;padding-bottom: 25px;background: #fff;}
	/* 服务器型号列表pc */
	.server-model .model-list li{
		border: 1px solid #e5e5e5;
		width: 20%!important;
		background: #fff;
		margin-bottom: 0;
	}
	/* 服务型号列表左上部分 */
	.model-list .left-top{
		float: none;
		width: 100%;
		height: 90px;
		background: #f8f8f8;
	}
	.left-top h4{
		line-height: 1;
		height: auto;
	}
	.left-top h4 span{
		display: inline-block;
	}
	.left-top h4 span:nth-of-type(1){
		font-weight: bold;
		font-size: 20px;
		margin-bottom: 12px;
		margin-top: 16px;
	}
	.left-top h4 span:nth-of-type(2){
		color: #4a4a4a;
		font-size: 14px;
	}
	/* 服务型号列表右下部分 */
	.model-list .right-bottom{
		float: none;
		width: 100%;
		padding-top: 10px;
	}
	.model-data{
		min-width: 70px;
	}
	.model-data:nth-of-type(2n){
		border: 0;
	}
	.model-list .right-bottom p{
		padding-top: 10px;
		line-height: 1.5;
	}

}

@media screen and (min-width: 1170px){
	.model-data{
		min-width:40%;
		padding-left: 10px;
	}
}


	
