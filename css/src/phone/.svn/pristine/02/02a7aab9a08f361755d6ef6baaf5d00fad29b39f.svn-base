/* 顶部大图 */
.jumbotron{
	background:url("../images/porduct/banner.jpg") no-repeat center/cover;
	height: 450px;
	margin-bottom: 15px;
}
.jumbotron h1{
	color:#fda833;
	font-size: 28px;
	margin-top: 70px;
	padding: 8px;
	font-weight: bold;
}
.jumbotron p{
	color:#fda833;
	padding-left: 20px;
	padding-right: 20px;
	font-size: 20px;
}
.fz16{
	font-size: 16px;
}
.fz14{
	font-size: 14px;
}


/* 产品优势 */
.product-advantage{
	margin-bottom: 20px;
}
.product-advantage > h4{color: #2a2a2a;font-size: 18px;margin-bottom: 15px;}
.product-advantage ul{
	list-style: none;
}
.product-advantage li{position: relative;margin-bottom: 10px;}
.product-advantage li span{
	position: absolute;
	top: 50%;
	left: -35px;
	width: 20px;
	height: 20px;
	background:url("../images/porduct/right.png") no-repeat center/cover;
	margin-top: -10px;
}
.product-advantage p{line-height: 1.6;margin-bottom: 14px;letter-spacing: 1px;}
.product-server .thumbnail{border: none;}
/* 产品优势 */


.intro > h3{
	color: #2a2a2a;
	margin-bottom: 15px;
}
.intro > p{
	color: #2a2a2a;
	letter-spacing: 2px;
	margin-bottom: 24px;
}
/* 
	推荐型号开始 
*/
.recommend-img{
	margin-top: 20px;
	margin-bottom: 15px;
}
.recommend-detail .memory{
	color: #666;
}
.recommend-detail .efficient{
	font-size: 16px;
}
.recommend-detail .see-all a{
	background: #cd2332;
	border-radius: 0;
	color: #fff;
	width: 145px;
	height: 40px;
	line-height: 26px;
}
#serverNumber{
	padding-top: 20px;
	padding-bottom: 20px;
	background: #f9f9f9;
	margin-left: -15px;
	margin-right: -15px;
	margin-bottom: 0;
}
#serverNumber a{
	color: #2a2a2a;
	font-size: 18px;
}
/* 
	推荐型号结束
*/

/* mobile服务器型号列表左侧 */
.model-list .left-top{float: left;width: 32%;background: #f3f3f3;height: 140px;}
.left-top h4{color: #2a2a2a;height: 140px;margin:0;line-height: 140px;}
.left-top p{margin: 0;}
/* mobile服务器型号列表左侧 */
.model-list .right-bottom{float: right;width: 68%;padding-right: 10px;padding-left: 12px;height: 140px;background: #fff;}
.model-data{display: inline-block;padding-left: 4px;padding-right: 6px;color: #666;border-right: 1px solid #ccc;height: 15px;line-height: 15px;margin-bottom: 5px;min-width: 70px;}
.model-data:nth-of-type(1){}
.model-data:nth-last-of-type(1){border-right: none;}
.describe {background:#f9f9f9;padding-left: 10px;padding-right: 10px;}
.describe li{padding: 0;border: 1px solid #ccc;margin-bottom: 10px;border: 1px solid #ccc;margin-bottom: 10px;}

.data-unit{margin-right: 4px;margin-left: 1px;}

.right-bottom p{color: #2a2a2a;padding-top: 7px;margin-bottom: 7px;padding-left: 4px;}
.suited-company{padding-top: 8px;margin-top: 6px;border-top: 1px solid #ddd;height:50px;line-height:1.5;}


@media screen  and (max-width:650px){
	.jumbotron h1{
		font-size: 25px;
	}
}
/* xs手机 */
@media screen and (max-width: 768px){
	.intro .imgWrap{
		width: 120px;
		margin: 0 auto 15px;
	}
}



@media screen and (max-width: 960px){
	
	.intro .row > div >div{
		background: #fff;
		padding-top: 20px;
		padding-bottom: 12px;
		
	}
	.intro .row > div >div >h3{
		font-size: 20px;
	}
	.intro .row > div >div >p{
		line-height: 1.5;
	}
	.look-more a{
		color: #0048ff;
	}
	.see-all{
		margin-top: 26px;
		margin-bottom: 30px;
	}
	.bot-banner{
		width: 100%;
		height: 290px;
		background: url('../images/porduct/bot-banner.jpg') no-repeat center/cover;
	}
}

@media (min-width: 768px) and (max-width:970px) {
	.suited-company{line-height: 50px;}
	.bot-banner{height: 550px;}
}

/* pc */
@media screen and (min-width: 970px){
	/* PC巨幕样式 */
	body{
		background: #f8f8f8;
	}
	.jumbotron{
		position: relative;
		height: 600px;
		background-image: url('../images/porduct/pc-product.jpg');
	}
	
	.jumbotron h1{
		text-align: left;
		font-size: 60px;
		margin-top: 203px;
		padding: 12px;
		padding-left: 22px;
		font-weight: normal;
		padding-left: 0;
	}
	.jumbotron p{
		text-align: left;
		padding-left: 22px;
		font-size: 34px;
		padding-left: 0;
	}
	.product-introduce{
		padding: 46px 170px;		
		font-size: 20px;
		line-height: 1.8;
	}
	.intro {
		padding-bottom: 50px;
	}
	.intro .imgWrap{
		width: 150px;
		height: 150px;
		margin: 0 auto;
		padding-top: 20px;
	}
	#cloud-img{padding-top: 50px;}
	.intro h2{margin-top: 44px;margin-bottom: 35px;font-size: 26px;}
	.intro h3{color:#4a4a4a;margin-top: 32px;font-size: 22px;}	
	.intro .row >div >div{
		border: 1px solid #ddd;
		margin-top: 15px;
		padding-bottom: 15px;
		position: relative;
		background: #fff;
		width: 90%;
		position: relative;
	}
	#all{
		border: none;
		background: none;
	}
	#all >div{
		width: 200px;
		height: 200px;
	}
	.intro .row >div >div:hover .pc-hover{
		opacity: 0.85
	}	
	.intro .row > div > div h4{
		padding-top: 20px;
		font-size: 20px;
	}
	.intro .row > div > div .b-h4{color:#4a4a4a;}
	.intro strong{
		position: absolute;
		right: -55px;
		top: 50%;	
		margin-top: -40px;
		font-size: 50px;
		width: 45px;
		height: 80px;
		color: #d2d2d2;	
	}
	
	.look-more a{
		color: #fda833;
		text-decoration: underline;
	}
	/* 服务器特性 */
	.pc-hover{
		position: absolute;
		width: 100%;
		height: 100%;
		background: rgba(205,35,50,0.95);
		opacity: 0;
		transition: all 0.4s ;
		-moz-transition:all 0.4s;
		-ms-transition:all 0.4s;
		-o-transition:all 0.4s;
		-webkit-transition:all 0.4s;
	}
	.pc-hover h4{
		text-align: center;
		color: #fff;
		padding-top: 20px;
		padding-bottom: 12px;
		font-size: 22px;
	}
	.pc-hover h5{
		text-align: center;
		padding: 0 12px;
		color: #fff;
		font-weight: normal;
		line-height: 1.8;
		padding-left: 22px;
		padding-right: 22px;
		letter-spacing: 1px;
	}/* 服务器特性 */
	/* 
		推荐型号 
	*/
	.recommend{
		padding-top: 25px;
		padding-bottom: 25px;
	}
	.recommend .row > h2{
		font-size: 26px;
		margin-top: 30px;
		margin-bottom: 30px;
	}
	.recommend img{
		margin-top: 54px;
	}
	.recommend-detail{
		padding-left: 48px;
	}
	.recommend-detail h4,.recommend-detail p{
		text-align: left;
	}
	.recommend-detail h4{
		font-size: 32px;
		color: #555;
		letter-spacing: 3px;
		padding-bottom: 8px;
	}
	.container .recommend-detail p{
		color: #ababab;
		font-size: 18px;
		padding-bottom: 5px;
	}
	.see-all{
		padding-top: 25px;
		padding-left: 5px;
	}

	/* 	产品优势PC端 */
.advantage-pc{background: #fff;padding-bottom: 40px;}
.advantage-pc h2{font-size: 26px;margin-top: 48px;margin-bottom: 38px;}
.product .content .VSCont > img{width:100%; height:auto}
.product .content .VSCont > div{width:33%;}
.product .content .VSCont > div:after{content:''; display:block; clear:both}
.product .content .VSCont > div p{ position:relative;font-size:18px; line-height:1.8;margin-bottom: 0}
.product .content .VSCont > div p:after{ display:block; content:''; width:10px; height:10px; position:absolute; margin:auto; top:0; bottom:0; border-radius:180px}
.product .content .VSCont > div.left{float:left; text-align:right}
.product .content .VSCont > div.right{float:right}

.product .content .VSCont > div.left p:after{ right:-20px; background:#cd2332}
.product .content .VSCont > div.right p{ color:#939393}
.product .content .VSCont > div.right p:after{ left:-20px; background:#d2d2d2}
	/* 	产品优势PC端 结束*/
	/* 底部大图 */
	.bot-banner{
			width: 100%;
			background: url('../images/porduct/prd_footBg1.jpg') no-repeat center/cover;
		}
	.bot-banner .container{
		background: url('../images/porduct/service-banner.png') no-repeat center/cover;
		height: 160px;		
	}	
}

@media  (min-width: 970px) and (max-width:1170px) {
	.pc-hover h5{
		line-height: 1.5;
		padding-left: 10px;
		padding-right: 10px;	
	}
	.intro .row > div > div h4{
		font-size: 18px;
	}
}
@media  (min-width: 1170px) {
	#all >div{
		width: 240px;
	}
}






