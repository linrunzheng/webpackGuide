/* 顶部大图 */
.jumbotron{
	background:url("../images/porduct/mb-banner.jpg") no-repeat center/cover;
	height: 450px;
}
.jumbotron h1{
	color:#fda833;
	font-size: 30px;
	margin-top: 70px;
	padding: 8px;
}
.jumbotron p{
	color:#fda833;
	padding-left: 20px;
	padding-right: 20px;
}
.bot-banner img{width: 100%;margin-top: 80px;}
.bot-banner{background: #000;}
/* 服务特性介绍 */

.intro > h3{
	color: #2a2a2a;
	margin-bottom: 15px;
}
.intro > p{
	color: #2a2a2a;
	letter-spacing: 2px;
	margin-bottom: 24px;
}
.intro .see_server{color:#0048ff;margin-bottom: 28px;}
/* 服务特性介绍 */

/* 服务器型号banner图 */
.server-model h3{margin-bottom: 28px;}
.model-banner img{margin:0 auto;}
.model-banner{padding-bottom: 35px;background: #fff;}





@media (min-width: 768px) and (max-width:990px) {
	.suited-company{line-height: 50px;}
}



/* 手机 */
@media screen and (max-width: 768px){
	.intro .imgWrap{
		width: 120px;
		margin: 0 auto;
	}
	.bot-banner img{
		margin-top: 20px;
	}
	.intro > h2{
		font-size: 24px;
		margin-bottom: 20px;
	}
}
/* pc */
@media screen and (min-width: 970px){
	/* PC巨幕样式 */
	body{
		background: #f8f8f8;
	}
	.intro > p{
		padding-left: 220px;
		padding-right: 220px;
		padding-bottom: 25px;
		line-height: 1.8;
		font-size: 18px;
		text-align: center;
	}
	.jumbotron{
		background:#201331;
		position: relative;
		height: 515px;
	}
	
	.jumbotron h1{
		text-align: left;
		font-size: 44px;
		margin-top: 165px;
		padding: 12px;
		padding-left: 0;
	}
	.jumbotron p{
		text-align: left;
		padding-left: 0;
		font-size: 26px;
	}
	.jumbotron img{
		position: absolute;
		right: 0;
		top: 84px;
	}

	.intro{
		padding-bottom: 50px;
	}
	.intro .imgWrap{
		width: 155px;
		height: 150px;
		margin: 0 auto;
		padding-top: 20px;
	}
	#online{width: 135px;}
	#recovery{width: 142px;}
	.intro h2{margin-top: 44px;margin-bottom: 35px;font-size: 26px;}
	.intro h3{color:#4a4a4a;margin-top: 32px;font-size: 22px;}	
	.intro .row >div >div{
		border: 1px solid #ddd;
		margin-top: 15px;
		padding-bottom: 15px;
		position: relative;
		background: #fff;
	}
	.intro .row >div{
		margin-bottom: 10px;
	}
	.intro .row >div >div:hover .pc-hover{
		opacity: 0.88;
	}

	#ncard_exchange .imgWrap{
		width: 92px;
	}
	/* 服务器特性 */
	.pc-hover{
		position: absolute;
		width: 100%;
		height: 100%;
		background: rgba(205,35,50,0.95);
		opacity: 0;
		transition: all 0.4s ;
		-moz-transition:all 0.4s;
		-ms-transition:all 0.4s;
		-o-transition:all 0.4s;
		-webkit-transition:all 0.4s;
	}
	.pc-hover h4{
		text-align: center;
		color: #fff;
		padding-top: 20px;
		padding-bottom: 12px;
		font-size: 22px;
	}
	.pc-hover h5{
		text-align: center;
		padding: 0 12px;
		color: #fff;
		font-weight: normal;
		line-height: 1.5;
	}/* 服务器特性 */
	.bot-banner img{
		width: 80%;
		margin: 0 auto;max-width: 1100px;
	}

}


@media screen and (max-width: 960px){

	.jumbotron h1{
		font-size: 26px;
	}
	.jumbotron p{
			font-size: 20px;
	}

	.intro .row > div{		
		margin-bottom: 10px;		
	}
	.intro .row > div >div{
		background: #fff;
		padding-top: 20px;
		padding-bottom: 20px;
		border: 1px solid #eee;
	}
	.intro .row > div >div >h3{
		font-size: 20px;
	}
	.intro .row > div >div >p{
		line-height: 1.5;
		padding-left: 10px;
		padding-right: 10px;
	}
}

body{
	background: #f9f9f9;
}